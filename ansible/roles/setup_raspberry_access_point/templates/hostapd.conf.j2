country_code={{ country | default(default_country) }}
interface=wlan0

{% if extended_network is True %}
bridge=br0
{% else %}
driver=nl80211
{% endif %}

ssid={{ ap_ssid_name | default(default_ap_ssid_name) }}
hw_mode=g
channel=6
wmm_enabled=0
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase={{ ap_ssid_pass | default(default_ap_ssid_pass) }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
